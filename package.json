{
  "name": "node-typescript-api",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
